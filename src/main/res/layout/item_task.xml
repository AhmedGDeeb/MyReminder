<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground">

        <!-- الصف العلوي: العنوان والأولوية -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- مؤشر الأولوية -->
            <View
                android:id="@+id/priorityIndicator"
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:background="@color/priority_normal"
                android:layout_marginEnd="12dp" />

            <!-- العنوان -->
            <TextView
                android:id="@+id/textTaskTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="عنوان المهمة"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- حالة الإنجاز -->
            <CheckBox
                android:id="@+id/checkBoxDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/accent_color" />

        </LinearLayout>

        <!-- الوصف -->
        <TextView
            android:id="@+id/textTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:text="وصف المهمة"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- الصف السفلي: التاريخ والأيقونات -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- التاريخ -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_date"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/textDueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27 أكتوبر"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- الأولوية -->
            <TextView
                android:id="@+id/textPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/priority_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="عادي"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!-- أيقونة التنبيه -->
            <ImageView
                android:id="@+id/iconReminder"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_notifications"
                android:tint="@color/text_secondary"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>